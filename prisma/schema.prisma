// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now()) @map(name: "created_at")
  updatedAt         DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")
  role          UserRole  @default(USER)

  accounts Account[]
  sessions Session[]
  invoiceDrafts InvoiceDraft[]
  invoices Invoice[]
  monthlyUsages MonthlyUsage[]

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  @@map(name: "users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model InvoiceDraft {
  id            String    @id @default(cuid())
  userId        String
  status        DraftStatus @default(IN_PROGRESS)
  type          InvoiceType @default(INVOICE)

  invoiceNumber   String?

  aiSessionId   String?   // Track AI session ID. To be implemented later
  freelancerInfo Json?    // JSONB structure for freelancer info
  clientInfo     Json?    // JSONB structure for client info
  invoiceDetails Json?    // JSONB structure: issue date, due date, currency, etc.
  lineItems      Json?    // JSONB structure: items with description, quantity, rate
  paymentTerms   Json?    // JSONB structure: method, depositRequired, amount
  customNote   String?    // Optional: Note to client

  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "invoice_drafts")
}

model Invoice {
  id            String    @id @default(cuid())
  userId        String
  type          InvoiceType @default(INVOICE)
  status        DraftStatus @default(IN_PROGRESS)
  number   String?
  date DateTime?
  dueDate DateTime?
  currency String?
  paymentDetails String?
  customNotes String?
  billTo Json?
  from Json?
  items Json?
  subtotal Float?
  taxRate Float?
  tax Float?
  total Float?

  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "invoices")
}

enum DraftStatus {
  IN_PROGRESS
  COMPLETE
  CANCELLED
  OVERDUE
  PAID
  SENT
}

enum InvoiceType {
  INVOICE
  QUOTE
  PROFORMA
}

model OTPCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@unique([email, code])
  @@map("otp_codes")
}

model MonthlyUsage {
  id           String    @id @default(cuid())
  userId       String
  year         Int
  month        Int
  invoices Int       @default(0)
  tokens   Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user         User      @relation(fields: [userId], references: [id])

  @@unique([userId, year, month]) // one record per month per user
  @@index([userId])
  @@map(name: "monthly_usages")
}

